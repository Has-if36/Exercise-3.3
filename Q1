#include <iostream>
#include <string>
using namespace std;

int main()
{
  //a) a floating point named price initialized to 9.90
     float price = 9.90;
  
  //b) an integer named quantity
     int quantity=1;
  
  //c) a constant integer named DISC initialized to 10
     const int DISC = 10;
  
  //d) a floating point name totalprice
    float totalprice;
	
  //get quantity purchased from the user and then, calculate the totalprice
	totalprice = (price*quantity)*(100-DISC)/100;
}
